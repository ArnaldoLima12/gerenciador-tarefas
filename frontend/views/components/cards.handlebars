<div class="flex gap-4 flex-wrap">
    {{#if cards}}
        {{#each cards}}
            <div class=" overflow-hidden border border-black flex flex-col gap-1 min-w-60 min-h-36 rounded-md">
                
                <div class="flex rounded-t-sm border-b border-slate-600 p-1 text-white" style="background-color: {{this.color}};">
                    <div class="w-full flex text-lg text-center">
                        <a class="flex-grow text-center" href="/home/project/content/{{this._id}}">{{this.title}}</a> 
                    </div>
                   
                   <div class="btn-group" role="group">
                        <button type="button" class="" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots-vertical"></i>
                        </button>
                       
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Compartilhe</a></li>
                            <li><a class="dropdown-item" href="#">Editar</a></li>
                        </ul>
                    </div>
                </div>

                <div class="p-2 flex flex-col gap-2 items-start justify-between">
                    <span class="font-bold text-md">Criado por {{this.creator}}</span>
                    <p class="text-sm text-muted"><span class="font-bold"></span> {{this.description}}</p>
                    <p class="text-sm text-end block w-full"><span class="font-bold">Início:</span> {{fdt this.created_at 'numeric'}}</p>
                </div>

            </div>
        {{/each}}
    {{else}}
        <div class="flex gap-2 items-center">
            <p class="m-0">Você ainda não possui projetos. Adicione um novo</p>
             <div class="btn-group" role="group">
                <button type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-patch-plus text-2xl hover:text-purple-600"></i>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Entrar em um projeto</a></li>
                    <li><button  class="dropdown-item" data-bs-toggle="modal" data-bs-target="#projeto" >Criar projeto</button></li>
                </ul>
            </div>
        </div>
    {{/if}}
</div>