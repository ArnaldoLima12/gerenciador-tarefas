<div class="flex gap-3 px-2 py-4 w-full">
    {{#if project}}
        
        <div class="flex flex-col justify-between items-center border border-slate-500 w-1/4 rounded-md p-2 gap-2">

            <div class="w-full border-b border-slate-300 py-1">
                 <h2 class="text-xl ">{{project.title}}</h2>
            </div>

            <div class="flex gap-3 p-2 items-center justify-center w-full">
                
                <div class="w-2/4">
                    <h3 class="text-center px-4 py-1 font-bold bg-violet-600 text-white">Início</h3>
                    <p class="text-xs text-center">{{fdt project.created_at 'numeric'}}</p>
                </div>

                <div class="w-2/4">
                    <h3 class="text-center px-4 py-1 font-bold bg-violet-600 text-white">Término</h3>
                    <p class="text-xs text-center">{{fdt project.dueDate 'numeric'}}</p>
                </div>
            </div>

            <div class="w-full">
                <p class="font-bold mb-2">Criador: <span class="font-normal">{{project.creator}}</span></p>
                <p class="font-bold">Colaboradores</p>
                <ul>
                    {{#each project.integrantes}}
                        <li>{{this.name}}</li>
                    {{/each}}
                </ul>
            </div>

        </div>

        <div class="w-5/6 border border-slate-500 rounded-md p-3">
           
        </div>     
    {{/if}}
</div>

{{>infos}}